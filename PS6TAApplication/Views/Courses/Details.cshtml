@model PS6TAApplication.Models.Course

@{
    ViewData["Title"] = "Details";
}

<!-- I spent a LONG time trying to figure out why the .css files weren't loading in and eventually
just decided it wasn't worth it to continue, so I'm putting the style stuff in here. The weird thing
is that they were working fine before I started working on PS6, I don't know what happened. -->
<style>
    .data_label {
        color: gray;
        font-size: 24px;
    }

    .data_text {
        color: white;
        font-size: 32px;
    }

    .minor_label {
        color: gray;
        font-size: 14px;
    }

    .minor_text {
        color: white;
        font-size: 16px;
        padding-right: 10px;
    }

    .separator_label {
        color: lightgray;
        font-size: 40px;
        margin-top: 25px;
    }

    .form_separator {
        margin-left: 12.5%;
        margin-right: 12.5%;
        width: 75%;
        display: flex;
        justify-content: center;
        border-width: 3px;
    }

    a:link, a:visited {
        color: white;
    }
</style>

<body id="page">
    <header></header>

    <div class="container" id="base_page_container">
        <div class="row justify-content-md-center">

            <h3 class="text-center separator_label">General Course Info</h3>

            <div class="container col-xxl-12 px-4 py-5 bg-dark rounded-4">
                <div class="row">
                    <div class="col-12 col-md-6 ">
                        <span class="data_label">@Html.DisplayNameFor(model => model.SemesterOffered):  </span>
                        <span class="data_text">@Html.DisplayFor(model => model.SemesterOffered)</span>
                    </div>

                    <div class="col-12 col-md-6 detail_text ">
                        <span class="data_label">@Html.DisplayNameFor(model => model.YearOffered):  </span>
                        <span class="data_text">@Html.DisplayFor(model => model.YearOffered)</span>
                    </div>
                    <div class="col-12 detail_text ">
                        <span class="data_label">@Html.DisplayNameFor(model => model.Title):  </span>
                        <span class="data_text">@Html.DisplayFor(model => model.Title)</span>
                    </div>
                    <div class="col-12 col-md-4 detail_text ">
                        <span class="data_label">@Html.DisplayNameFor(model => model.Department):  </span>
                        <span class="data_text">@Html.DisplayFor(model => model.Department)</span>
                    </div>
                    <div class="col-12 col-md-4 detail_text ">
                        <span class="data_label">@Html.DisplayNameFor(model => model.Number):  </span>
                        <span class="data_text">@Html.DisplayFor(model => model.Number)</span>
                    </div>
                    <div class="col-12 col-md-4 detail_text ">
                        <span class="data_label">@Html.DisplayNameFor(model => model.Section):  </span>
                        <span class="data_text">@Html.DisplayFor(model => model.Section)</span>
                    </div>
                </div>
            </div>


            <h3 class="text-center separator_label">Course Description</h3>
            <hr class="form_separator">

            <div class="container col-xxl-12 px-4 py-5 bg-dark rounded-4">
                <div class="row">
                    <div class="col-12 detail_text ">
                        <span class="data_text">@Model.Description</span>
                    </div>
                </div>
            </div>

            <h3 class="text-center separator_label">Course Specifics</h3>
            <hr class="form_separator">
            <div class="container col-xxl-12 px-4 py-5 bg-dark rounded-4">
                <div class="row">
                    <div class="col-12 col-md-6 detail_text ">
                        <span class="data_label">@Html.DisplayNameFor(model => model.ProfessorName):  </span>
                        <span class="data_text">@Html.DisplayFor(model => model.ProfessorName)</span>
                    </div>
                    <div class="col-12 col-md-6 detail_text ">
                        <span class="data_label">@Html.DisplayNameFor(model => model.ProfessorUNID):  </span>
                        <span class="data_text">@Html.DisplayFor(model => model.ProfessorUNID)</span>
                    </div>
                    <div class="col-12 col-md-6 detail_text ">
                        <span class="data_label">@Html.DisplayNameFor(model => model.Schedule):  </span>
                        <span class="data_text">@Html.DisplayFor(model => model.Schedule)</span>
                    </div>
                    <div class="col-12 col-md-6 detail_text ">
                        <span class="data_label">@Html.DisplayNameFor(model => model.Location):  </span>
                        <span class="data_text">@Html.DisplayFor(model => model.Location)</span>
                    </div>
                    <div class="col-12 col-md-6 detail_text ">
                        <span class="data_label">@Html.DisplayNameFor(model => model.CreditHours):  </span>
                        <span class="data_text">@Html.DisplayFor(model => model.CreditHours)</span>
                    </div>
                    <div class="col-12 col-md-6 detail_text ">
                        <span class="data_label">@Html.DisplayNameFor(model => model.Enrollment):  </span>
                        <span class="data_text">@Html.DisplayFor(model => model.Enrollment)</span>
                    </div>
                </div>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <h3 class="text-center separator_label">Admin Note</h3>
                <hr class="form_separator">
                <div class="container col-xxl-12 px-4 py-5 bg-dark rounded-4">
                    <div class="row">
                        <div class="col-12 col-md-12 detail_text ">
                            <span class="data_text">
                                @Html.DisplayFor(model => model.AdminNote)
                            </span>
                        </div>
                    </div>
                </div>
            }
            <div class="container col-xxl-12 px-4 py-5 rounded-4">
                <div class="row">
                    <div class="col-12 col-md-6 detail_text" style="text-align:center">
                        <span class="minor_label">Created By:  </span>
                        <span class="minor_text">@Html.DisplayFor(model => model.CreatedBy)</span>
                        <span class="minor_label">Creation Date:  </span>
                        <span class="minor_text">@Html.DisplayFor(model => model.CreationDate)</span>
                    </div>
                    <div class="col-12 col-md-6 detail_text" style="text-align:center">
                        <span class="minor_label">Modified By:  </span>
                        <span class="minor_text">@Html.DisplayFor(model => model.ModifiedBy)</span>
                        <span class="minor_label">Last Modified:  </span>
                        <span class="minor_text">@Html.DisplayFor(model => model.ModificationDate)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<div>

    <div style="position:relative; align-content:center; text-align:center; margin-top:15px">
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-secondary btn-lg px-4 m-2" style="text-align:center" asp-action="Edit" asp-route-id="@Model?.ID">Edit</a>
        }
        <a class="btn btn-primary btn-lg px-4 m-2" style="text-align:center" asp-action="Index">Back to List</a>
    </div>
</div>
