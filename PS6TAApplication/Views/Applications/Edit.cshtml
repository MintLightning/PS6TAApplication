@model PS6TAApplication.Models.Application

@{
    ViewData["Title"] = "Edit";
}

<!-- I spent a LONG time trying to figure out why the .css files weren't loading in and eventually
just decided it wasn't worth it to continue, so I'm putting the style stuff in here. The weird thing
is that they were working fine before I started working on PS6, I don't know what happened. -->
<style>
    #jobapp_image {
    }

    .form_separator {
        margin-left: 12.5%;
        margin-right: 12.5%;
        width: 75%;
        display: flex;
        justify-content: center;
        border-width: 3px;
    }

    #help_button {
        width: 15px;
        height: 15px;
        position: relative;
        top: -2px;
    }

    #chkbox {
        padding-top: 1.8em;
        float: right;
    }
</style>

<div class="container" id="base_page_container">
    <div class="row justify-content-center d-flex align-items-center">
        <div class="col-10 col-lg-6">
            <h1 id="home_title">Edit Application</h1>
            <hr class="page_separator">
            <h2 id="home_desc"> Make changes to your submission</h2>
            <p id="page_desc">Here you can make changes to a previous submission. Please be as accurate as possible and double check all entries for accidental edits. Once you have finished making changes, press the save button to update your submission.</p>
        </div>
    </div>

    <div class="row">
        <hr class="page_separator" style="margin-top: 1.5em">
    </div>

    <form asp-action="Edit" class="text-light row justify-content-center">
        <div class="col-lg-10">
            <div class="row">
                <h3 class="text-center">Academic Info</h3>
                <hr class="form_separator">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3 col-md-5">
                    <label asp-for="CurrentDegree" class="control-label"></label>
                    <select asp-for="CurrentDegree" asp-items="@Html.GetEnumSelectList<Application.degree>()" class="form-control"></select>
                    <span asp-validation-for="CurrentDegree" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-5">
                    <label asp-for="Department" class="control-label"></label>
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-2">
                    <label asp-for="UofUGPA" class="control-label"></label>
                    <input asp-for="UofUGPA" class="form-control" />
                    <span asp-validation-for="UofUGPA" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-4">
                    <label asp-for="SemestersCompleted" class="control-label"></label>
                    <input asp-for="SemestersCompleted" class="form-control" />
                    <span asp-validation-for="SemestersCompleted" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 col-md-8">
                    <label asp-for="TransferSchool" class="control-label"></label>
                    <input asp-for="TransferSchool" class="form-control" />
                    <span asp-validation-for="TransferSchool" class="text-danger"></span>
                </div>


                <h3 class="text-center">Teaching Info</h3>
                <hr class="form_separator">

                <div class="form-group mb-3 col-md-4">
                    <label asp-for="HoursRequested" class="control-label"></label>
                    <input asp-for="HoursRequested" class="form-control" />
                    <span asp-validation-for="HoursRequested" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-8">
                    <label asp-for="LinkedInURL " class="control-label"></label>
                    <input asp-for="LinkedInURL" class="form-control" />
                    <span asp-validation-for="LinkedInURL" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-12">
                    <label asp-for="Statement" class="control-label"></label>
                    <textarea asp-for="Statement" class="form-control"></textarea>
                    <span asp-validation-for="Statement" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-8">
                    <label asp-for="ResumeFileName" class="control-label"></label>
                    <input asp-for="ResumeFileName" class="form-control" />
                    <span asp-validation-for="ResumeFileName" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-3 col-md-4">
                    <label class="form-check-label" id="chkbox">
                        <input class="form-check-input" asp-for="IsAvailableWeekBefore" /> @Html.DisplayNameFor(model => model.IsAvailableWeekBefore)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
